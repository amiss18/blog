{% extends 'base.html.twig' %}


{% block head %}
<title>{% block title %}Le Blog des Voisins{% endblock %}</title>

{% endblock %}

{% block body %}


<div class="jumbotron  mb-0">

	<a class="text-dark" href="{{ path('home') }}"><h1>Le Blog des Voisins</h1></a>

</div>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
  <a class="navbar-brand" href="{{ path('home') }}">Accueil</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="{{ path('dashboard') }}">Tableau de bord<span class="sr-only">(current)</span></a>
      </li>
      
      
    </ul>
    <!--<form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>-->
  </div>
</nav>


<div class="container mt-15">
	<div class="row">
		<div class="col-lg-10">

			<div class="row flex">

				{% for post in posts %}

					<div class="card">
						<div class="card-body">
							<div class="card-title">
								<a href="{{ path('post.display', {id: post.id, slug: post.slug}) }}"> {{ post.titre }}</a>

								<p class="card-text">{{ post.text }}</p>

							</div>
						</div>

					</div>

				{% endfor %}
			</div>
		</div>
	<div class="col-sm-2">col-sm-2</div>
	</div>
</div>

{% endblock %}
